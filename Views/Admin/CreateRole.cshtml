@model App.ViewModels.CreateRoleViewModel

<h4 style="margin-left:40%; margin-top:30px">Create a new role</h4>
@*<hr />*@
<div style="margin-left:40%">
    <div class="col-md-12 mb-4" style="width:80%">
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="RoleName" class="control-label mb-3"></label>
                <input asp-for="RoleName" class="form-control w-50"/>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:40%">
    <a asp-action="listroles">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
