@model App.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

@*<hr />*@

<div class="row mt-4">
    <div class="col-md-2">

    </div>
    <div class="col-md-6 mt-3">
        <h4 class="m-2" style="position:relative; left:2%; top:9px; margin-bottom:10px">Edit Role</h4>
        <form method="post">

        <div class="form-group row m-3">
        <label asp-for="RoleId" class="col-sm-2 col-form-label mr-3"></label>
        <div class="col-sm-10">
            <input asp-for="RoleId" disabled class="form-control w-75">
        </div>
    </div>
    <div class="form-group row m-3">
        <label asp-for="RoleName" class="col-sm-2 col-form-label mr-3" style="margin-right:0px"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control w-75">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

     <div class="form-group row m-3">
        <label asp-for="IsEnabled" class="col-sm-2 col-form-label mr-3" style="margin-right:0px"></label>
        <div class="col-sm-10">
            <input asp-for="IsEnabled" type="checkbox">
            <span asp-validation-for="IsEnabled" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row" style="margin-left:15px">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>


        </form>
    </div>

  
<div class="card mt-2 mb-3 w-25 col-md-3">
  
    <div class="card-header">
        <h2>Role Functions</h2>
    </div>

    <div class="card-body">
        @if (Model.Claims.Any())
        {
            foreach (var item in Model.Claims)
            {
                <h5 class="card-title">@item</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at the moment</h5>
        }
    </div>
    <div class="card-footer">
    <a asp-action="ManageRoleClaims" asp-route-roleId="@Model.RoleId"
        style="width:auto" class="btn btn-primary" asp-controller="admin">
        Manage functions
    </a>
    </div>
    </div>
      <div class="col-md-1">

    </div>
</div>

<div class="mt-3">
    <a asp-action="listroles" asp-controller="admin" style="margin-left:19%; margin-top:40px;text-align:center">Back to List</a>
</div>

