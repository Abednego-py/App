@*
@model List<Microsoft.AspNetCore.Identity.IdentityRole>*@

@model List<App.Models.ApplicationRole>

@{
    ViewData["Title"] = "Role Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="m-3">Role Manager</h1>


  <button class="btn btn-info" style="float:right">
      <a asp-action="createrole" asp-controller="admin" style="text-decoration:none">
      Add New Role </a></button>

<table class="table table-hover m-2">
    <thead>
        <tr>
            
            <th>Role</th>
            <th>Is Enabled</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
     
                {
                    <tr>
                        <td>@role.Name</td>
                     
                        <td>@role.IsEnabled</td>
                        <td>
                            <a asp-action="editrole" asp-controller="admin" asp-route-id="@role.Id">edit role</a>
                        </td>

                    </tr>
                }
           
    </tbody>
</table>
