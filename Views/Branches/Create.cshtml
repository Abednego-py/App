@model App.Models.Branch

@{
    ViewData["Title"] = "Create";
}

<h4 style="margin-left:30%; margin-top:30px">Create a new branch</h4>


<div class="row" style="margin-left:30%">
    <div class="col-md-5 mb-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="BranchName" class="control-label"></label>
                <input asp-for="BranchName" class="form-control" />
                <span asp-validation-for="BranchName" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="SortCode" class="control-label"></label>
                <input asp-for="SortCode" class="form-control" />
                <span asp-validation-for="SortCode" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="open">Open</option>
                     <option value="close">Closed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group" mb-4>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:30%">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
