@model App.Models.Claims

@{
    ViewData["Title"] = "Create";
}


<h4 style="margin-left:14%; margin-bottom:20px; margin-top:10px">Create Claim</h4>

<div class="row" style="margin-left:14%">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="ClaimsName" class="control-label"></label>
                <input asp-for="ClaimsName" class="form-control" />
                <span asp-validation-for="ClaimsName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div  style="margin-left:14%;">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
