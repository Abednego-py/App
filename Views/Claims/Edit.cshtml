@model App.Models.Claims

@{
    ViewData["Title"] = "Edit";
}

<h3 style="margin-left:14%; margin-top:20px; margin-bottom:40px">Edit Claim</h3>

<div class="row" style="margin-left:14%">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:20px"></div>
            <input type="hidden" asp-for="ClaimsId" />
            <div class="form-group" style="margin-top:10px; margin-bottom:10px">
                <label asp-for="ClaimsName" class="control-label"></label>
                <input asp-for="ClaimsName" class="form-control" />
                <span asp-validation-for="ClaimsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:14%">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
