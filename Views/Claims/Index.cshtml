@model IEnumerable<App.Models.Claims>

@{
    ViewData["Title"] = "Index";
}

<h3>Role Function Manager</h3>


  <button class="btn btn-info" style="float:right">
      <a asp-action="Create" style="text-decoration:none">
     Create New </a> </button>

<table class="table table-hover m-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClaimsName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimsName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClaimsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClaimsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClaimsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
