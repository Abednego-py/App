
@model App.ViewModels.VaultInViewModel


<h4 style="margin-left:12%">Post Transaction</h4>

<div class="row" style="margin-left:14%">
    <div class="col-md-5">
        <form asp-action="VaultOut" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
             <div class="form-group" style="margin-bottom:10px">
                <label asp-for="CodeNumber" class="control-label"></label>
                <input asp-for="CodeNumber" class="form-control" />
                <span asp-validation-for="CodeNumber" class="text-danger"></span>
            </div>
           
            <div class="form-group" style="margin-bottom:10px">
                <input type="submit" value="Sell Cash" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:12%">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
