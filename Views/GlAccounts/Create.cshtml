@model App.Models.GLAccount

@{
    ViewData["Title"] = "Create";
}

<h4 style="margin-left:20%; margin-top:30px">Create a new GL Account</h4>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:20px;">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px;">
                <label asp-for="CodeNumber" class="control-label"></label>
                <input asp-for="CodeNumber" class="form-control" disabled/>
                <span asp-validation-for="CodeNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px;">
                <label asp-for="AccountBalance" class="control-label"></label>
                <input asp-for="AccountBalance" class="form-control" />
                <span asp-validation-for="AccountBalance" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px;">
                <label asp-for="GLCategoryID" class="control-label"></label>
                <select asp-for="GLCategoryID" class ="form-control" asp-items="ViewBag.GLCategoryID"></select>
            </div>
            <div class="form-group" style="margin-bottom:20px;">
                <label asp-for="BranchID" class="control-label"></label>
                <select asp-for="BranchID" class ="form-control" asp-items="ViewBag.BranchID"></select>
            </div>
            <div class="form-group form-check" style="margin-bottom:20px;">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActivated" /> @Html.DisplayNameFor(model => model.IsActivated)
                </label>
            </div>
            <div class="form-group" style="margin-bottom:20px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:20%;">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
