@model App.Models.GLAccount

@{
    ViewData["Title"] = "Details";
}


<div class="margin-left:14%">
    <h4 style="margin-left:14%">GLAccount Details</h4>

    <br />
 
    <dl class="row" style="margin-left:14%">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodeNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodeNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountBalance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountBalance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GLCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GLCategory.CategoryDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Branch)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Branch.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActivated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActivated)
        </dd>
    </dl>
</div>
<div class="row w-75" style="margin-left:13%">
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="col-md-2">Edit</a> |
    <a asp-action="Index" class="col-md-2">Back to List</a> |
    <a asp-action="VaultIn" asp-controller="glaccounts" class="col-md-2" class="col-md-2">Vault In</a> |
    <a asp-action="VaultOut" asp-controller="glaccounts" class="col-md-2" class="col-md-2">Vault Out</a>
</div>
