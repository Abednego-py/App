@model App.Models.GLAccount

@{
    ViewData["Title"] = "Edit";
}


<h4 style="margin-left:14%">Edit GLAccount</h4>
<br />
<div class="row" style="margin-left:14%">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="CodeNumber" class="control-label"></label>
                <input asp-for="CodeNumber" class="form-control" />
                <span asp-validation-for="CodeNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="AccountBalance" class="control-label"></label>
                <input asp-for="AccountBalance" class="form-control" />
                <span asp-validation-for="AccountBalance" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="GLCategoryID" class="control-label"></label>
                <select asp-for="GLCategoryID" class="form-control" asp-items="ViewBag.GLCategoryID"></select>
                <span asp-validation-for="GLCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px"> 
                <label asp-for="BranchID" class="control-label"></label>
                <select asp-for="BranchID" class="form-control" asp-items="ViewBag.BranchID"></select>
                <span asp-validation-for="BranchID" class="text-danger"></span>
            </div>
            <div class="form-group form-check" style="margin-bottom:10px">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActivated" /> @Html.DisplayNameFor(model => model.IsActivated)
                </label>
            </div>
            <div class="form-group" style="margin-bottom:10px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:14%">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
