@model IEnumerable<App.ViewModels.TillToUserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-left:10%; margin-top:5px">All Tellers</h2>

<button class="btn" style="float:right;">
    @Html.ActionLink("Assign Till To Teller", "Create")
</button>
<table class="table table-hover" id="dataTable" style="margin:auto; margin-left:40px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GLAccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountBalance)
            </th>
            <th>
                Teller
            </th>
            <th>
                edit
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
    {
        @if(item.AccountBalance != "NIL") {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GLAccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @if (item.HasDetails)
                {
                     @Html.ActionLink("Details", "Details", new { id = item.Id }, new {@class="btn btn-success"})
                    @*<button> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>*@
                }
                @if (item.IsDeletable)
                {
                    <label>  </label>
                     @Html.ActionLink("Delete Association", "Delete", new { id = item.Id }, new {@class="btn btn-success"})
                }
            </td>
        </tr>
       }
    }
</tbody>

</table>



