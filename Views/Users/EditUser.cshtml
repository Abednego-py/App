@model App.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="margin-left:10%">Edit User</h1>

<div class="row">
    <div class="col-md-4" style="margin-left:10%; margin-right:10%">
        <form asp-action="EditUser">
          @*  <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-4">
                <label asp-for="FirstName" class="control-label" style="margin-bottom:5px"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="LastName" class="control-label" style="margin-bottom:5px"></label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="UserName" class="control-label" style="margin-bottom:5px"></label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
             <div class="form-group mb-4">
                <label asp-for="Email" class="control-label" style="margin-bottom:5px"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="form-group mb-4">
                <label asp-for="PhoneNumber" class="control-label" style="margin-bottom:5px"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

               <div class="form-group mb-4">
                <label asp-for="IsEnabled" class="col-sm-2 col-form-label mr-3"></label>
                <input asp-for="IsEnabled" type="checkbox">
                <span asp-validation-for="IsEnabled" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>


<div class="card mt-5 mb-3 w-25 col-md-4" style="height:fit-content">
  
    <div class="card-header">
        <h2>User Roles</h2>
    </div>

    <div class="card-body">
        @if (Model.Roles.Any())
        {
            foreach (var item in Model.Roles)
            {
                <h5 class="card-title">@item</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at the moment</h5>
        }
    </div>
    <div class="card-footer">
    <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id"
        style="width:auto" class="btn btn-primary" asp-controller="users">
        Manage User Roles
    </a>
    </div>
    </div>

    </div>

<div style="margin-left:10%">
    <a asp-action="listusers">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

